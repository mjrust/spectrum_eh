<% title "Body Mass Index" %>



<% if  @body_mass_index.nil? %>
	
	<% form_tag({:controller  => 'calculators', :action  =>  'bmi'}, :method  => 'post', :class  => 'calculators', :id  => 'bmi') do %>
		<%= label_tag("Height:") %><br />

	  <%= text_field_tag(:feet) %>
		<%= label_tag("Feet") %>  
	  <%= text_field_tag(:inches) %>
		<%= label_tag("Inches") %><br />
		<%= label_tag("Weight") %>
	  <%= text_field_tag(:weight) %>
	  <%= submit_tag("Calculate") %>
	<% end %>

<% elsif @@body_mass_index < 18.5 %>

	<p>Underweight</p>
	
<% elsif (@body_mass_index > 18.5) && (@body_mass_index < 24.9) %>

	<p>Normal weight</p>

<% elsif (@body_mass_index > 25) && (@body_mass_index < 29.9) %>

	<p>Overweight</p>
<% elsif (@body_mass_index > 30.0) && (@body_mass_index < 34.9) %>

	<p>Obesity (Class 1)</p>
<% elsif (@body_mass_index > 35) && (@body_mass_index < 39.9) %>

	<p>Obesity (Class 2)</p>
<% elsif @body_mass_index > 40 %>

	<p>Extreme Obesity (Class 3)</p>		
<% else %>
  <p>Test</p>
<% end %>